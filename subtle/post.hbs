{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<main class="site-main">
	<div class="site-content">

		<article class="{{post_class}}">
			<header class="cover post-header">
				{{#if feature_image}}
				<div class="cover-bg" style="background-image: url({{feature_image}})"></div>
				{{/if}}
				<div class="cover-content">
					<div class="inner">
						{{#if tags}}
						<div class="tag-links">
							{{tags}}
						</div><!-- .tag-links -->
						{{/if}}
						<h1 class="post-title">{{title}}</h1>
						<div class="post-meta">
							<span class="post-meta-wrap">
								{{#primary_author}}
									{{#if profile_image}}<img class="author-avatar" src="{{profile_image}}" alt="{{name}}" />{{/if}} <span class="post-author"><a href="{{url}}">{{name}}</a></span>
								{{/primary_author}}
								<time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
							</span>
							<span class="reading-time">{{reading_time minute="Read in 1 min" minutes="Read in % min"}}</span>
						</div><!-- .post-meta -->
						<a href="#" class="arrow-down"><span class="screen-reader-text">Scroll Down</span></a>
					</div><!-- .inner -->
				</div><!-- .cover-content -->
			</header><!-- .cover -->
			<div class="inner">
				<div class="post-content">
					{{content}}
				</div><!-- .post-content -->
				<footer class="post-footer share-post">
					<span>Share:</span>
					<a class="circle" target="_blank" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"><i class="icon-twitter" aria-hidden="true"></i><span class="screen-reader-text">Twitter</span></a>
					<a class="circle" target="_blank" href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}"><i class="icon-facebook" aria-hidden="true"></i><span class="screen-reader-text">Facebook</span></a>
					<a class="circle" target="_blank" href="http://plus.google.com/share?url={{url absolute="true"}}"><i class="icon-google" aria-hidden="true"></i><span class="screen-reader-text">Google+</span></a>
				</footer><!-- .post-footer -->
			</div><!-- .inner -->
		</article>

		{{!-- The tag below includes the theme comments - partials/comments.hbs --}}
		{{> comments}}

		{{!-- Email subscribe form --}}
		{{#if @labs.subscribers}}
		<section class="subscribe-box">
			<div class="inner">
				<h2 class="subscribe-box-title">Subscribe to {{@blog.title}}</h2>
				<p>Get the latest posts delivered right to your inbox.</p>
				{{subscribe_form form_class="gh-subscribe-form" placeholder="Your email address"}}
			</div>
		</section>
		{{/if}}

		{{!-- Previous/next post links --}}
		<nav class="post-navigation">
			<h2 class="screen-reader-text">Post navigation</h2>
			<div class="nav-links">
				{{#next_post}}
				<a href="{{url}}" class="nav-next">
					{{#if feature_image}}
					<div class="nav-bg" style="background-image: url({{feature_image}})"></div>
					{{/if}}
					<div class="nav-inside">
						<span class="nav-before">Next</span><span class="nav-title">{{title}}</span><span class="nav-date">{{date format="MMMM DD, YYYY"}}</span>
					</div>
				</a>
				{{/next_post}}
				{{#prev_post}}
				<a href="{{url}}" class="nav-previous">
					{{#if feature_image}}
					<div class="nav-bg" style="background-image: url({{feature_image}})"></div>
					{{/if}}
					<div class="nav-inside">
						<span class="nav-before">Previous</span><span class="nav-title">{{title}}</span><span class="nav-date">{{date format="MMMM DD, YYYY"}}</span>
					</div>
				</a>
				{{/prev_post}}
			</div>
		</nav><!-- .post-navigation -->

	</div><!-- .site-content -->
</main><!-- .site-main -->
{{/post}}
